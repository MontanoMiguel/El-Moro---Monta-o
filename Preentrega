CREATE SCHEMA SistemaVenta;
USE SistemaVenta;

CREATE TABLE SistemaVenta.Proveedor (
    ID_Proveedor INT PRIMARY KEY,
    Nombre VARCHAR(100),
    Teléfono VARCHAR(20),
    Email VARCHAR(100) UNIQUE
);

CREATE TABLE SistemaVenta.Cliente (
    ID_Cliente INT PRIMARY KEY,
    Nombre VARCHAR(100),
    Teléfono VARCHAR(20),
    Email VARCHAR(100) UNIQUE,
    Dirección VARCHAR(200)
);

CREATE TABLE SistemaVenta.Producto (
    ID_Producto INT PRIMARY KEY,
    Nombre VARCHAR(100),
    Categoría VARCHAR(50),
    Precio DECIMAL(10,2),
    Stock INT,
    ID_Proveedor INT,
    FOREIGN KEY (ID_Proveedor) REFERENCES SistemaVenta.Proveedor(ID_Proveedor)
);

CREATE TABLE SistemaVenta.Venta (
    ID_Venta INT PRIMARY KEY,
    Fecha DATETIME,
    ID_Cliente INT,
    Total DECIMAL(10,2),
    FOREIGN KEY (ID_Cliente) REFERENCES SistemaVenta.Cliente(ID_Cliente)
);

CREATE TABLE SistemaVenta.Detalle_Venta (
    ID_Detalle INT PRIMARY KEY,
    ID_Venta INT,
    ID_Producto INT,
    Cantidad INT,
    Subtotal DECIMAL(10,2),
    FOREIGN KEY (ID_Venta) REFERENCES SistemaVenta.Venta(ID_Venta),
    FOREIGN KEY (ID_Producto) REFERENCES SistemaVenta.Producto(ID_Producto)
);
